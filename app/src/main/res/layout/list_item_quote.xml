<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/pad_large"
    android:paddingRight="@dimen/pad_large"
    android:paddingStart="@dimen/pad_large"
    android:paddingEnd="@dimen/pad_large"
    android:layoutDirection="locale">

  <TextView
      android:id="@+id/stock_symbol"
      style="@style/StockSymbolTextStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="start|center_vertical"
      tools:text="GOOG"
      />
  <LinearLayout
      android:layout_width="@dimen/dimen_zero"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="end"
      >
    <TextView
        android:id="@+id/bid_price"
        style="@style/BidPriceTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/pad_medium"
        android:paddingEnd="@dimen/pad_medium"
        tools:text="1000.00"
        />
    <TextView
        android:id="@+id/change"
        android:background="@drawable/percent_change_pill"
        style="@style/PercentChangeTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/pad_small"
        android:paddingRight="@dimen/pad_small"
        android:paddingStart="@dimen/pad_small"
        android:paddingEnd="@dimen/pad_small"
        tools:text="100%"
        />
  </LinearLayout>
</LinearLayout>